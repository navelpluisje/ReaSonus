<div class="home-block {{ item.color }}">
    <article class={{item.color}}>
        <header>
            <img src="{{ item.image | url }}" alt="" class="image" />
            <img src="{{ '/images/logo-only.svg' | url }}" alt="" class="logo"/>
        </header>
        <section class="content">
            <Heading>{{item.title}}</Heading>
            <section>
                {{ item.content | safe }}
            </section>
        </section>
    </article>
</div>
